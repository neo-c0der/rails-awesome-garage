<div class="navbar">

  <%= image_tag 'logo.png' %>
  <div>
    <%= link_to 'Home', root_path %>
    <%= link_to 'My Garage', favourites_path %>
  </div>

</div>


<h1>My Garage</h1>

<ul>
  <% @favourites.each do |favourite| %>
    <p><%= favourite.car.brand %>
    <%= link_to "Delete",
      favourite_path(favourite),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
    </p>
  <% end %>
</ul>
