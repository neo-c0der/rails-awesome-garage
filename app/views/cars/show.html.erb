<div class="navbar">

  <%= image_tag 'logo.png' %>
  <div>
    <%= link_to 'Home', root_path %>
    <%= link_to 'My Garage', favourites_path %>
  </div>

</div>

<h2><%= @car.brand %></h2>
<h3><%= @car.model %></h3>
<h4><%= @car.fuel %></h4>
<p><%= @car.year %></p>

<% if @car.favourites.empty? %>
  <%= simple_form_for [@car, @favourite] do |f| %>
    <%= f.submit "Add to your Garage", class: "btn btn-primary" %>
  <% end %>
<% else %>
  <p>This car is already in your Garage</p>
<% end %>

<h2>New review</h2>
<%= simple_form_for [@car, @review] do |f| %>
  <%= f.input :comment %>
  <%= f.input :rating, collection: 1..5 %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>

<h2>Reviews</h2>
<% @car.reviews.each do |review| %>
  <p><%= review.comment %></p>
  <p>Rating: <%= review.rating %></p>
  <p>----------------------</p>
<% end %>
